@{
    ViewBag.Title = "Detail";
}
@model RickApps.UploadFilesMVC.ViewModels.HomeDetailViewModel
    <div class="details-page">
    <section class="item-details products page-start p-b-small">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">

                        @for (int i=0; i<Model.ItemImages.Count(); i++)
                        {
                                @if (i == 0)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @(i+1)"></button>
                                }
                                else
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
                                }
                        }

                        </div>
                        <div class="carousel-inner">
                            @{var state = "active"; }
                            @foreach (var photo in Model.ItemImages)
                            {
                                <div class="carousel-item @state">
                                @{state = "";}
                                <img src=@photo class="d-block w-100" alt=@Model.Number>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <h1 class="h2">@Model.Name</h1>
                    <div class="price d-flex justify-content-between align-items-center text-primary">
                        <ul class="list-inline">
                        <li class="list-inline-item">@Model.FormattedPrice</li>
                        </ul>
                    </div>
                    <div class="model">
                        <ul class="list-unstyled">
                            <li><span class="text-uppercase">Item No: </span>@Model.Number</li>
                        </ul>
                    </div>
                    <div class="description">
                        <p>@Model.Description</p>
                    </div>
                    <div class="CTAs">
                        <ul class="list-inline">
                            <li class="list-inline-item">@Html.ActionLink("Add To Cart", "AddToCart", "Shopping",
                                                   new { itemCode = Model.Number },
                                                   new { @class = "btn btn-unique" })</li>
                            <li class="list-inline-item">@Html.ActionLink("Ask Question", "Contact", "Home",
                                                   new { itemCode = Model.Number },
                                                   new { @class = "btn btn-dark" })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>